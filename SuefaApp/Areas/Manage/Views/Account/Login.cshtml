@model AdminLoginVM

@{ Layout = null; }

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Login</title>

    <!-- Custom fonts for this template-->
    <link href="~/manage/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/manage/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <style type="text/css">

        #validation {
            width: 100%;
        }

        .validation-summary-errors {
            width: 100%;
        }

        #validation ul {
            list-style: none;
            text-align: center;
            width: 100%;
            font-size: 16px;
            color: red;
            margin: 0;
            padding: 0;
            margin-bottom: 10px;
        }

        .validation-summary-errors ul {
            list-style: none;
            width: 100%;
            text-align: center;
            font-size: 16px;
            color: red;
            margin: 0;
            padding: 0;
            margin-bottom: 10px;
        }

        .budu {
            height: 85vh;
        }

            .budu .row {
                height: 100%;
            }

        .esheodin {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }

        .keeperadminphone {
            display: flex;
            justify-content: start;
            align-items: center;
        }

            .keeperadminphone input {
                border: none;
                outline: none;
                padding: 5px;
                color: black;
                letter-spacing: 2px;
            }

            .keeperadminphone span {
                border-right: 0.5px solid #d1d3e2;
                padding-right: 5px;
                color: black;
                font-size: 16px;
                letter-spacing: 2px;
            }

        input {
            color: black;
            width: 100%;
            font-size: 16px;
            letter-spacing: 2px;
            border: none;
            outline: none;
        }
    </style>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body budu p-0">
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6 esheodin">
                                <div class="col-lg-10 col-10">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Salam Admin!</h1>
                                    </div>

                                    <form class="user " method="post" enctype="multipart/form-data"
                                          asp-area="Manage" asp-controller="Account" asp-action="Login">
                                        <div id="validation" asp-validation-summary="ModelOnly"></div>

                                        <div class="flex-wrap d-flex justify-content-between col-lg-12 col-12 p-0 mb-3">
                                            <div class="col-lg-12 col-12 form-control align-items-center py-1 keeperadminphone">
                                                <span>+994</span>
                                                <input maxlength="9" id="login" placeholder="Phone..." asp-for="Login">
                                            </div>
                                            <span asp-validation-for="Login" class="text-danger col-lg-12 col-12 text-center"></span>
                                        </div>

                                        <div class="flex-wrap d-flex justify-content-between col-lg-12 col-12 p-0 mb-3">
                                            <div class="col-lg-12 col-12 align-items-center p-0">
                                                <input type="password" asp-for="Password" class="form-control" placeholder="Password...">
                                            </div>
                                            <span asp-validation-for="Password" class="text-danger col-lg-12 col-12 text-center"></span>
                                        </div>

                                        <button type="submit" class="btn btn-primary btn-user btn-block">
                                            Daxil Ol
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/manage/vendor/jquery/jquery.min.js"></script>
    <script src="~/manage/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/manage/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!--Validation -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.4/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/manage/js/sb-admin-2.min.js"></script>

    <script src="~/manage/customJS/custom.js" asp-append-version="true"></script>
</body>

</html>